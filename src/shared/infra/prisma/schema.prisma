datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Company {
  id         String          @id @default(uuid())
  seller     Seller[]
  modules    ModuleCompany[]
  manager    Manager[]
  image      String
  name       String
  supervisor Supervisor[]
  created_at DateTime        @default(now())
}

model Seller {
  id           String         @id @default(uuid())
  visit        Visit[]
  supervisor   Supervisor     @relation(fields: [supervisorId], references: [id])
  supervisorId String
  image        String
  name         String
  email        String         @unique
  company      Company        @relation(fields: [companyId], references: [id])
  companyId    String
  moduleGrades ModuleGrades[]
  created_at   DateTime       @default(now())
}

model Supervisor {
  id         String   @id @default(uuid())
  image      String
  name       String
  email      String
  password   String
  seller     Seller[]
  manager    Manager? @relation(fields: [managerId], references: [id])
  managerId  String?
  created_at DateTime @default(now())
  company    Company  @relation(fields: [companyId], references: [id])
  companyId  String
}

model Manager {
  id         String       @id @default(uuid())
  supervisor Supervisor[]
  image      String
  name       String
  email      String
  password   String
  company    Company      @relation(fields: [companyId], references: [id])
  companyId  String
  created_at DateTime     @default(now())
}

model Module {
  id           String          @id @default(uuid())
  sellerGrades ModuleGrades[]
  name         String
  companies    ModuleCompany[]
  created_at   DateTime        @default(now())
}

model ModuleCompany {
  id        String  @id @default(uuid())
  companyId String
  company   Company @relation(fields: [companyId], references: [id])
  moduleId  String
  module    Module  @relation(fields: [moduleId], references: [id])
}

model ModuleGrades {
  id                  String   @id @default(uuid())
  seller              Seller   @relation(fields: [sellerId], references: [id])
  sellerId            String
  implementationScore Float
  knowledgeScore      Float
  supervisorComment   String
  module              Module   @relation(fields: [moduleId], references: [id])
  moduleId            String
  created_at          DateTime @default(now())
}

model Visit {
  id           String   @id @default(uuid())
  storeVisited String
  dateVisited  DateTime
  seller       Seller   @relation(fields: [sellerId], references: [id])
  sellerId     String
  created_at   DateTime @default(now())
}