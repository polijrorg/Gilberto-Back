datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Company {
  id         String       @id @default(uuid())
  seller     Seller[]
  manager    Manager[]
  image      String
  name       String
  supervisor Supervisor[]
  created_at DateTime     @default(now())
}

model Seller {
  id           String     @id @default(uuid())
  supervisor   Supervisor @relation(fields: [supervisorId], references: [id])
  supervisorId String
  image        String
  name         String
  email        String     @unique
  company      Company    @relation(fields: [companyId], references: [id])
  companyId    String
  created_at   DateTime   @default(now())
}

model Supervisor {
  id         String   @id @default(uuid())
  image      String
  name       String
  email      String
  seller     Seller[]
  created_at DateTime @default(now())
  manager    Manager  @relation(fields: [managerId], references: [id])
  managerId  String
  company    Company  @relation(fields: [companyId], references: [id])
  companyId  String
}

model Manager {
  id         String       @id @default(uuid())
  image      String
  name       String
  email      String
  company    Company      @relation(fields: [companyId], references: [id])
  companyId  String
  supervisor Supervisor[]
  created_at DateTime     @default(now())
}