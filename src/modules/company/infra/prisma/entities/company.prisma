model Company {
  id          String     @id @default(uuid())
  image       String
  name        String
  stage       String     @default("Est√°gio inicial")
  director    Director[]
  manager     Manager[]
  supervisor  Supervisor[]
  seller      Seller[]
  modules     ModuleCompany[]
  created_at  DateTime   @default(now())
}

model Seller {
  id          String     @id @default(uuid())
  company     Company    @relation(fields: [companyId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  companyId   String
}

model Supervisor {
  id          String     @id @default(uuid())
  company     Company    @relation(fields: [companyId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  companyId   String
}

model Manager {
  id          String     @id @default(uuid())
  company     Company    @relation(fields: [companyId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  companyId   String
}

model Director {
  id          String     @id @default(uuid())
  company     Company    @relation(fields: [companyId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  companyId   String
}

model ModuleCompany {
  id          String     @id @default(uuid())
  companyId   String
  company     Company    @relation(fields: [companyId], references: [id], onDelete: Cascade, onUpdate: Cascade)
}
